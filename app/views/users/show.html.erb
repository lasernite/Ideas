<%# All User Notification %>

<div class="wrapper">
    <div class="box">

      <div class="column col-sm-12 col-xs-12" id="main">

      	<%# Render Top Navigation Bar %>
        <%= render 'welcome/top_nav' %>

<div class="all_notify">
<% @all_notifications.each do |notification| %>
	<div class="all_notification">
		<%= link_to notification.post_string + '..."' , post_url(Post.find_by(id:notification.post_id)) + '/comments' %>
	</div>
<% end%>
<%= will_paginate @all_notifications, :class => 'all_notification' %>
</div>

</div>
</div>
</div>