                  <span class="icon-bar"></span>
                      </button>
                      <div>
                        <%= link_to image_tag('think_space_logo.png', :class => "tslogo"), '/' %>
                      </div>
                        <%= link_to 'Think Space', '/', :class => "think_space" %>
                    </div>

                  <div class="col-sm-9">
                    <nav class="collapse navbar-collapse" role="navigation">

                    <form class="navbar-left search_box_form">
                        <div class="input-group input-group-sm" class="search_box_div">
                          <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term" class="search_box">
                          <div class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                          </div>
                        </div>
                    </form>

                    <ul class="nav navbar-nav navbar-right notify">
                      <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-exclamation fa-lg"></i></a>
                        <ul class="dropdown-menu">
                          <li><a href="">More</a></li>
                          <li><a href="">More</a></li>
